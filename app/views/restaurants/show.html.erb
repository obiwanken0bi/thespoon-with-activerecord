<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.rating %>/5</p>

<%= link_to "Edit restaurant", edit_restaurant_path, :class => "btn btn-warning" %>

<%= link_to "Delete restaurant",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" },
            :class => "btn btn-danger" %>

<%= link_to "Back to the list of restaurants", restaurants_path %>
